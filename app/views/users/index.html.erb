<header class="jumbotron">
  <div class="container">
    <div class="row">
      <h2 class="text-center">Welcome to the User Manger</h2>
    </div>
  </div>
  <div id="notice"></div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-push-2 col-lg-6 col-lg-push-3">
      <h3>All Current Users</h3>
      <ul id="user-list">
        <%= render @users %>
      </ul>

    </div>
  </div>

<hr>

  <div class="row">
    <div class="col-md-8 col-md-push-2 col-lg-6 col-lg-push-3">
      <h3>Add a User</h3>

      <%= form_for User.new do |f| %>
        <div class="form-group">
          <%= f.text_field :name, placeholder: "Name of user?", class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>


</div>
